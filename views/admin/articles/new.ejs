<%- include ("../../partials/header.ejs") %>
<%- include ("../../partials/navbar.ejs") %>
<body>
   <div class="container">
       <hr>
       <div class="card">
           <div class="card-header">
                <h2>Novo Artigo</h2>
           </div>
            <div class="card-body">
                <form action="/categories/save" method="POST"> 
                    <input class="form-control" type="text" name="title" placeholder="Defina o titulo do artigo"><br>
                    <textarea name="" id="article" class="form-control" placeholder="Escreva seu Artigo" name="body" id="" cols="30" rows="10"></textarea><br>
                    <button class="btn btn-success">Cadastrar</button>
                </form>
            </div>
        </div>
   </div>
</body>

<%- include ("../../partials/footer.ejs") %>

<script src="/tinymce/tinymce.min.js"></script>

<script>
    tinymce.init({
        selector:"#article",
        plugins: [
            'advlist autolink link image list print preview hr searchreplace wordcount fullscreen isertdatetime media save table paste emoticons'
        ]
    })
</script>