<%- include ("../../partials/header.ejs") %>
<%- include ("../../partials/navbar.ejs") %>
<body>
    <div class="container">
        <hr>
        <h2>Categorias</h2>
        <hr>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Título</th>
                    <th>Slug</th>
                    <th>Açoes</th>
                </tr>
            </thead>
            <tbody>
                
                <% categories.forEach(category => { %>
                    <tr>
                        <td><%= category.id %></td>
                        <td><%= category.title %></td>
                        <td><%= category.slug %></td>    
                        <td></td>
                    </tr>
                <%})%>
            </tbody>
        </table>

    </div>
</body>
